---
import Card from '../components/Card.astro';
import { cardDetails } from '../data/data';
---

<section class='bg-gray-900'>
	<section class='max-w-5xl mx-auto text-[#fff] py-5' id='service'>
		<h2
			class='font-semibold text-3xl text-[#0039a6] lg:text-left text-center pb-5'
		>
			Services
		</h2>
		<section class="grid lg:grid-cols-2 gap-4">
			<p
				class='text-justify text-lg lg:text-normal leading-7 max-w-2xl mx-auto px-6 lg:px-0'
			>
				I am known for my exceptional problem-solving skills and a keen ability
				to mitigate risks and manage product requirements. I consistently
				surpass expectations at both the departmental and project levels.
			</p>
			<div class="w-[full] mx-auto">
				<p class="font-bold mb-3 text-lg">My Values</p>
				<ul class=" list-disc grid grid-cols-2 gap-x-7">
					<li>Commitment</li>
					<li>Honesty</li>
					<li>Strong Work Ethic</li>
					<li>Positive Attitude</li>
				</ul>
			</div>
		</section>

		<ul class='grid lg:grid-cols-2 gap-4 max-w-3xl lg:mx-auto mx-10 mt-8'>
			{
				cardDetails.map((card) => (
					<Card
						title={card.title}
						summary={card.summary}
						imageurl={card.imageUrl}
					/>
				))
			}
		</ul>
	</section>
</section>
