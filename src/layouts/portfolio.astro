---
import { Image } from '@astrojs/image/components';
import { companies } from '../data/data';
---

<section class='max-w-5xl mx-auto py-7' id='portfolio'>
	<h2 class='font-semibold text-3xl text-[#0039a6] py-2 lg:mb-3'>Portfolio</h2>
	<ul class='w-full border border-gray-300 flex lg:flex-row flex-col justify-center p-2 gap-16 rounded-lg items-center'>
		{
			companies.map((company) => (
				<li>
					<Image
						src={company.imageUrl}
						width={90}
						height={75}
						format='jpeg'
						alt={company.name}
						class='rounded-xl flex-end'
					/>
               <p class="text-center text-[0.5rem] italic">{company.name}</p>
				</li>
			))
		}
	</ul>
</section>
