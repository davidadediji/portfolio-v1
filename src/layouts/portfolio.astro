---
import { Image } from '@astrojs/image/components';
import { companies } from '../data/data';
---

<section class='max-w-5xl mx-auto' id='portfolio'>
	<h2 class='font-semibold text-3xl text-[#0039a6] py-5'>Portfolio</h2>
	<p>Here are the companies I have worked with</p>
	<ul class='w-full border-2 border-gray-400'>
		{
			companies.map((company) => (
				<li>
					<Image
						src='/profile-deyinka.jpeg'
						width={350}
						height={450}
						format='jpeg'
						alt='descriptive text'
						class='rounded-xl flex-end'
					/>
				</li>
			))
		}
	</ul>
</section>
