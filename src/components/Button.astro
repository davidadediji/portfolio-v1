---
import {BsBoxArrowInUpRight, BsArrowBarLeft} from 'react-icons/bs'
export interface Props {
	navText: string;
    backBtn:boolean;
}

const { navText, backBtn } = Astro.props as Props;
---

<a
	class='flex gap-2 w-fit p-1 px-2 items-center font-extrabold text-button-text md:transition-transform ease-out duration-200 bg-button-bg md:bg-inherit md:hover:bg-button-bg md:-translate-x-1 md:hover:translate-x-0 rounded'
	href='/about'>
    {backBtn ? <BsArrowBarLeft/> :<BsBoxArrowInUpRight/>}
    {navText}
</a>