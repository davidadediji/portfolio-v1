---
import { Image } from '@astrojs/image/components';
interface Props{
    imageurl:string
    title:string
    summary:string
}
const {imageurl, title, summary} = Astro.props as Props
---

<div class="border border-gray-100 rounded-lg bg-gray-300 text-black">
	<div>
		<Image
			src={imageurl}
			width={100}
			height={150}
			format='jpeg'
			alt='descriptive text'
			class='rounded-xl flex-end'
		/>
	</div>
    <h2>{title}</h2>
    <p>{summary}</p>
</div>
