---
type Navitems = {
	path: string;
	page: string;
};
export interface Props {
	navItems: Navitems[];
}
const { navItems } = Astro.props as Props;
---

<nav class='border-2 border-gray-900 sticky top-0 bg-[#fff]'>
	<div class='flex justify-between py-3 mx-auto max-w-7xl items-center px-3'>
		<h1 class='font-sora font-bold text-lg'>
			<a href='/'>Adeyinka</a>
		</h1>
		<ul class='hidden gap-5 text-sm md:flex'>
			{
				navItems.map((item) => (
					<li class='transition border-b border-transparent hover:border-black hover:text-underline'>
						<a href={item.path}>{item.page}</a>
					</li>
				))
			}
		</ul>
		<div class='md:hidden flex gap-5 items-center'>
			<button class='focus:outline-none' id='menu-toggle'>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					fill='none'
					viewBox='0 0 24 24'
					stroke='currentColor'
					class='h-6 w-6'
				>
					<path
						stroke-linecap='round'
						stroke-linejoin='round'
						stroke-width='2'
						d='M4 6h16M4 12h16M4 18h16'></path>
				</svg>
			</button>
			<button class='hidden focus:outline-none' id='cancel-toggle'>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					fill='none'
					viewBox='0 0 24 24'
					stroke-width='1.5'
					stroke='currentColor'
					class='w-6 h-6'
				>
					<path
						stroke-linecap='round'
						stroke-linejoin='round'
						d='M6 18L18 6M6 6l12 12'></path>
				</svg>
			</button>
		</div>
	</div>
	<ul class='md:hidden bg-white py-2 px-3 text-sm space-y-2 hidden' id='menu'>
		{
			navItems.map((item) => (
				<li class='transition border-b border-transparent hover:border-black hover:text-underline'>
					<a href={item.path}>{item.page}</a>
				</li>
			))
		}
	</ul>
</nav>

<script>
	const menuToggle = document.getElementById('menu-toggle');
	const cancelToggle = document.getElementById('cancel-toggle');
	const menu = document.getElementById('menu');

	menuToggle.addEventListener('click', function () {
		menu.classList.remove('hidden');
		menuToggle.classList.add('hidden');
		cancelToggle.classList.remove('hidden');
	});

	cancelToggle.addEventListener('click', function () {
		menu.classList.add('hidden');
		menuToggle.classList.remove('hidden');
		cancelToggle.classList.add('hidden');
	});
</script>
