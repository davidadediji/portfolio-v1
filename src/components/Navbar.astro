---
type Navitems = {
	path: string;
	page: string;
};
export interface Props {
	navItems: Navitems[];
}
const { navItems } = Astro.props as Props;
---

<nav class="border-2 border-gray-900 sticky top-0 bg-[#fff]">
  <div class="flex justify-between py-3 mx-auto max-w-7xl items-center px-3">
    <h1 class="font-sora font-bold text-lg">
      <a href="/">Adeyinka</a>
    </h1>
    <ul class="hidden gap-5 text-sm md:flex">
      {
        navItems.map((item) => (
          <li class="transition border-b border-transparent hover:border-black hover:text-underline">
            <a href={item.path}>{item.page}</a>
          </li>
        ))
      }
    </ul>
    <button class="md:hidden focus:outline-none" id="menu-toggle">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
  <ul class="md:hidden bg-white py-2 px-3 text-sm space-y-2" id="menu">
    {
      navItems.map((item) => (
        <li class="transition border-b border-transparent hover:border-black hover:text-underline">
          <a href={item.path}>{item.page}</a>
        </li>
      ))
    }
  </ul>
</nav>

<script>
  document.getElementById('menu-toggle').addEventListener('click', function() {
    var menu = document.getElementById('menu');
    menu.classList.toggle('hidden');
  });
</script>
